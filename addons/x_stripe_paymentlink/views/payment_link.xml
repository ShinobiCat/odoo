<template id="payment_link" inherit_id="website.layout" name="Payment Link">
    <t t-call="website.layout">
        <t t-set="title">Payment Link</t>
        <t t-if="payment_link">
            <div class="container">
                <h1>Payment Link</h1>
                <p>Click the button below to proceed to payment:</p>
                <a class="btn btn-primary" href="{{ payment_link }}" target="_blank">Pay Now</a>
            </div>
        </t>
        <t t-else="">
            <!-- Als er geen betaallink is, kun je hier een aangepaste boodschap plaatsen -->
            <div class="container">
                <h1>No Payment Link Available</h1>
                <p>Sorry, there is no payment link available for this product.</p>
            </div>
        </t>
    </t>
</template>
